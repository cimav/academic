%table#student-schedule{:style=>'border:0px;width:500px;'}
  - counter = 0
  - if @students.size > 0
    - @students.each do |s|
      - counter = counter + 1
      %tr
        %td.dia{:style=>'cursor:pointer;border:0px',:id=>s.id,:status=>s.status}
          .session_block(class="session_style_#{counter}"){:id=>"sblock_#{s.id}"}
            .session-title
              = s.full_name
              - if s.status.eql? 6
                = image_tag "ok_40px.png", :id=> "img_ok_#{s.id}" ,:align=> 'right', :width=>'30px'
              - else
                = image_tag "fail_40px.png", :id=> "img_fail_#{s.id}" ,:align=> 'right', :width=>'30px'
            .session-staff{:id=>"sstaff_#{s.id}"}= s.program.name
          
  - else
    %tr
      %td.dia= "No hay alumnos para inscripciÃ³n"

